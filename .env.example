# Shared Environment Variables for Koroh Platform
# Copy this file to .env and update the values as needed

# Database Configuration
POSTGRES_DB=koroh_db
POSTGRES_USER=koroh_user
POSTGRES_PASSWORD=koroh_password
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_URL=redis://${REDIS_HOST}:${REDIS_PORT}/0

# MeiliSearch Configuration
MEILISEARCH_HOST=meilisearch
MEILISEARCH_PORT=7700
MEILISEARCH_URL=http://${MEILISEARCH_HOST}:${MEILISEARCH_PORT}
MEILISEARCH_MASTER_KEY=koroh_meilisearch_key_change_in_production

# Django Configuration
DJANGO_SECRET_KEY=your-secret-key-change-in-production
DJANGO_DEBUG=True
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1,api
DJANGO_CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Next.js Configuration
NEXT_PUBLIC_API_URL=http://localhost:8000/api/v1
NEXT_PUBLIC_USE_MOCK_API=false
NEXTAUTH_SECRET=your-nextauth-secret-change-in-production
NEXTAUTH_URL=http://localhost:3000

# AWS Configuration (Required for AI features)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_DEFAULT_REGION=us-east-1
AWS_BEDROCK_REGION=us-east-1

# Email Configuration (MailHog for development)
EMAIL_HOST=mailhog
EMAIL_PORT=1025
EMAIL_USE_TLS=False
EMAIL_USE_SSL=False

# Celery Configuration
CELERY_BROKER_URL=${REDIS_URL}
CELERY_RESULT_BACKEND=${REDIS_URL}

# Monitoring Configuration
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin_change_in_production

# PgAdmin Configuration
PGADMIN_DEFAULT_EMAIL=admin@koroh.com
PGADMIN_DEFAULT_PASSWORD=admin_change_in_production
PGADMIN_PORT=5050

# Application Ports
API_PORT=8000
WEB_PORT=3000
NGINX_PORT=80
NGINX_SSL_PORT=443