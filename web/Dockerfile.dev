# Development Dockerfile for Next.js
FROM node:18-alpine

# Set working directory
WORKDIR /app

# Copy package files and install dependencies
COPY package*.json ./
RUN npm ci

# Copy source code
COPY . .

# Create necessary directories
RUN mkdir -p .next node_modules/.cache

# Expose port
EXPOSE 3000

# Start development server (run as root to avoid permission issues)
CMD ["npm", "run", "dev"]