# Production Environment Variables
# Copy this file to .env.production and update with your production values

# Django Configuration
DJANGO_SECRET_KEY=your-super-secret-django-key-change-this-in-production
DEBUG=False
DJANGO_ALLOWED_HOSTS=api.koroh.dev,koroh.dev,www.koroh.dev

# Database Configuration
POSTGRES_DB=koroh_platform
POSTGRES_USER=koroh_user
POSTGRES_PASSWORD=secure-database-password-change-this
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# Redis Configuration
REDIS_URL=redis://redis:6379/0

# Celery Configuration
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# AWS Configuration
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_DEFAULT_REGION=us-east-1
AWS_BEDROCK_REGION=us-east-1
AWS_BEDROCK_DEFAULT_MODEL=anthropic.claude-3-sonnet-20240229-v1:0
AWS_BEDROCK_TIMEOUT=30
AWS_BEDROCK_MAX_RETRIES=3

# MeiliSearch Configuration
MEILISEARCH_URL=http://meilisearch:7700
MEILISEARCH_MASTER_KEY=secure-meilisearch-master-key-change-this

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-email-password
DEFAULT_FROM_EMAIL=noreply@koroh.dev

# CORS Configuration
DJANGO_CORS_ALLOWED_ORIGINS=https://koroh.dev,https://www.koroh.dev

# Monitoring Configuration
GRAFANA_ADMIN_PASSWORD=secure-grafana-password-change-this
PROMETHEUS_RETENTION_TIME=30d

# Application Configuration
APP_VERSION=1.0.0
AI_SERVICES_ENABLED=True
PORTFOLIO_GENERATION_ENABLED=True
PEER_GROUPS_ENABLED=True
MONITORING_ENABLED=True

# SSL Configuration (for production)
SSL_CERT_PATH=/etc/ssl/certs/koroh.crt
SSL_KEY_PATH=/etc/ssl/private/koroh.key

# Backup Configuration
BACKUP_ENABLED=True
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=koroh-backups

# Log Configuration
LOG_LEVEL=INFO
LOG_MAX_SIZE=100MB
LOG_BACKUP_COUNT=10

# Performance Configuration
GUNICORN_WORKERS=4
GUNICORN_WORKER_CLASS=gevent
GUNICORN_WORKER_CONNECTIONS=1000
GUNICORN_MAX_REQUESTS=1000

# Security Configuration
RATE_LIMIT_ENABLED=True
SECURITY_HEADERS_ENABLED=True
CSRF_PROTECTION_ENABLED=True